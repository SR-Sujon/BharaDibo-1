@model IEnumerable<DesignFirstApproachCrud.Models.Student>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <a href="@Url.Action("Create", "Students")"><i class="btn btn-success btn-sm">Create</i></a>
    <br />
    <br />

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marks)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marks)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Students", new { id = item.StudentId })">
                        <i class="fa fa-edit btn btn-info btn-sm"></i>
                    </a> |
                    <a href="@Url.Action("Details", "Students", new { id = item.StudentId })">
                        <i class="btn btn-warning btn-sm">Details</i>
                    </a> |
                    <a href="@Url.Action("Delete", "Students", new { id = item.StudentId })">
                        <i class="btn btn-danger btn-sm">Delete</i>
                    </a>
                </td>
            </tr>
        }

    </table>
</body>
</html>
