<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*<link rel="stylesheet" href="Content/font-awesome.css">*@

</head>
<body style="background-color:goldenrod">
    <nav class="navbar navbar-expand-lg navbar-dark"  style="background-color:chocolate"">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon light"></span>
                </button>
                <a class="navbar-brand" href="/Home/Index" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">BharaDibo</a>
            </div>
            <div class="navbar-collapse collapse" id="navbarResponsive" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">
                <ul class="navbar-nav me-auto" style="align-items:center">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">
                            Home
                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/ProductPage">Menu</a>
                    </li>
                    @if (Session["CUSName"] != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/OrderHistory">Order History</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Orders">Order</a>
                        </li>
                        <li class="nav-item">
                            @if (Session["CUSName"] == "Admin")
                            {
                                <a class="nav-link" href="/Admin/AdminPanel">@Session["CUSName"]</a>
                            }
                            else
                            {
                                <a class="nav-link" href="/Home/CustomerProfile">@Session["CUSName"]</a>
                            }

                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Login">Login</a>
                        </li>
                    }
                    @if (Session["CUSName"] == null || Session["CUSName"] != "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/ContactUs">Contact Us</a>
                        </li>
                    }


                    @*<li class="nav-item">
                            <a class="nav-link" href="#">Devs Corner</a>
                        </li>*@
                </ul>
            </div>
        </div>
    </nav>

    <div class=" body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="footer_wrapper fit-content" style="background-color:chocolate">
                <div class="container" style="background-color:chocolate">
                    <div class="row pt-3">
                        <div class="col-md-4 text-center footerimg">
                            @*<img src="images/Login/deshi.png">*@
                            <h1>BharaDibo</h1>
                        </div>
                        <div class="col-md-4 text-center">
                            <p>
                                <a class="footwrite" href="/Home/Index">Home</a>
                            </p>
                            <p>
                                @*<p>
                                        <a class="footwrite" href="#">About</a>
                                    </p>*@
                            <p>
                                <a class="footwrite" href="/Home/ContactUs">Contact Us</a>
                            </p>
                            @*<p>
                                    <a class="footwrite" href="#">Devs Corner</a>
                                </p>*@
                        </div>
                        <div class="col-md-4 text-center">
                            <p>
                                <a href="#"><i class="fa fa-facebook footicons"></i></a>
                            </p>
                            <p>
                                <a href="#"><i class="fa fa-instagram footicons"></i></a>
                            </p>
                            <p>
                                <a href="#"><i class="fa fa-linkedin-in footicons"></i></a>
                            </p>
                            <p>
                                <a href="#"><i class="fa fa-twitter footicons"></i></a>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <p class="text-center last">ALL RIGHTS RESERVED BY BHARADIBO</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
