
@model BharaDibo.Models.ContactU

@{
    ViewBag.Title = "ContactUs";
}

<div class="bodybg">
    <div>
        <h1 class="headcontact">Contact Us</h1>
    </div>
    <div>
        <p class="textcontact">Anything you want to buy or give loan, you can do it from here....</p>
    </div>
    <div class="container">
        <div class="contact">
            <div class="row">
                <div class="col-xl-6">
                    <div class="Incontact">
                        <div class="">
                            <div>
                                <h2 class="mt-5 text-align-center contactemail">Email</h2>
                                <p class="contactwrite">BharaDibo@gmail.com</p>
                            </div>
                        </div>
                        <div>
                            <div class="mt-5">
                                <h2 class="contactemail">Contact No.</h2>
                                <p class="contactwrite">01830-301894</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6">
                    <form method="post">
                        <div class="form-group mt-5 mb-3">
                            <label class="mb-2">Full Name</label>
                            <input type="text" name="FullName" class="form-control" placeholder="" value="@Model.FullName" required>
                        </div>
                        <div class="form-group mb-3">
                            <label class="mb-2">Email</label>
                            <input type="email" name="Email" class="form-control" placeholder="" value="@Model.Email" required>
                        </div>
                        <div class="form-group mb-3">
                            <label class="mb-2">Message</label>
                            <textarea class="form-control cotext" name="ContactMessage" id="floatingTextarea" placeholder="What's your say ?" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@if (ViewBag.Noti != null)
{
    <script type="text/javascript">
    window.onload = function () {
        alert("@ViewBag.Noti");
        window.location.href = "Index";
    };
    </script>
}